<mvc:View xmlns:m="sap.m" xmlns="sap.uxap" xmlns:mvc="sap.ui.core.mvc" xmlns:table="sap.ui.table" xmlns:core="sap.ui.core"
	
		xmlns:l="sap.ui.layout"
	xmlns:v="sap.ui.comp.variants" xmlns:layout="sap.ui.layout" 
	xmlns:loccur="tool_roro_m30.blocks.localCurrency"	
	xmlns:doccur="tool_roro_m30.blocks.documentCurrency"
	xmlns:html="http://www.w3.org/1999/xhtml" controllerName="tool_roro_m30.controller.FS10N"
	height="100%">
	<m:Page showNavButton="true" title="{i18n>fs10n}" navButtonPress="onNavButtonPressMain">
		<!-- use this to make the table occupy the available screen height -->
		<m:content>
			<m:NavContainer id="pageContainer" initialPage="page1">
				<m:pages>
					<m:Page id="page1" title="{i18n>title}">
						<m:content>
							<l:VerticalLayout width="100%">
								<v:VariantManagement defaultVariantKey="*standard*" save="onSaveVariant" select="onChange" manage="onManage"
									variantItems="{variants>/}" class="sapUiSmallMargin">
									<v:variantItems>
										<v:VariantItem key="{variants>}" text="{variants>}"></v:VariantItem>
									</v:variantItems>
								</v:VariantManagement>
								<l:Grid containerQuery="true" defaultSpan="XL6 L6" width="100%" class="sapUiSmallMargin" vSpacing="0">
									<m:Label text="{i18n>client}" textAlign="Right" labelFor="client"/>
									<m:ComboBox selectedKey="800" required="true" id="client" placeholder="{i18n>client}" items="{ path: '/t000'}" selectionChange="resetFields">
										<core:Item key="{MANDT}" text="{MANDT}"/>
									</m:ComboBox>
									<m:Label text="{i18n>companycode}" textAlign="Right" labelFor="companycode"/>
									<m:MultiInput value="" placeholder="{i18n>company}" valueHelpOnly="true" showValueHelp="true" valueHelpRequest="showCompanyCode"
										required="true" id="companycode"/>
									<m:Label text="{i18n>account}" textAlign="Right" labelFor="account"/>
									<m:MultiInput value="" placeholder="{i18n>account}" valueHelpOnly="true" showValueHelp="true" valueHelpRequest="showAccount"
										required="true" id="account"/>
									<m:Label text="{i18n>ledger}" textAlign="Right" labelFor="ledger"/>
									<m:Input value="0L" placeholder="{i18n>ledger}" id="ledger" required="true"/>										
									<m:Label text="{i18n>year}" textAlign="Right" labelFor="year"/>
									<m:Input value="" placeholder="{i18n>year}" id="year" required="true"/>
									<m:Label text="{i18n>doccur}" textAlign="Right" labelFor="displaycurr"/>
									<m:ComboBox selectedKey="EUR" required="true" id="displaycurr" placeholder="{i18n>doccur}" items="{ path: '/documentcurr'}">
										<core:Item key="{RTCUR}" text="{RTCUR}"/>
									</m:ComboBox>
								</l:Grid>
							</l:VerticalLayout>
						</m:content>
					</m:Page>
					<m:Page id="page2" showNavButton="true" navButtonPress="onNavButtonPress">
						<m:content>
							<ObjectPageLayout id="ObjectPageLayout" alwaysShowContentHeader="true" useIconTabBar="true">
								<headerTitle>
									<ObjectPageHeader binding="{company>/company/0}" id="header" objectTitle="{company>columnAccount}"></ObjectPageHeader>
								</headerTitle>
								<headerContent >
									<layout:VerticalLayout binding="{company>/company/0}">
										<m:ObjectStatus title="{i18n>client}" text="{company>columnClient}"/>
										<m:ObjectStatus title="{i18n>company}" text="{company>columnCCode} {company>columnName}"/>
										<m:ObjectStatus title="{i18n>ledger}" text="{company>columnLedger}"/>
										<m:ObjectStatus title="{i18n>year}" text="{company>columnYear}"/>
									</layout:VerticalLayout>
									<m:Panel expandable="true" width="auto" class="sapUiResponsiveMargin">
										<m:headerToolbar>
											<m:OverflowToolbar height="3rem" style="Clear">
												<!--<m:Title text="Filter Options" />-->
												<!--<m:ToolbarSpacer />							-->
												<m:Button icon="sap-icon://drill-down" text="{i18n>filter}" press="onPressFilter"/>
											</m:OverflowToolbar>
										</m:headerToolbar>
										<m:content>
											<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="form1">
												<sap.ui.layout.form:formContainers>
													<sap.ui.layout.form:FormContainer id="container1">
														<sap.ui.layout.form:formElements>
															<!--<sap.ui.layout.form:FormElement label="Ledger" id="element1">-->
															<!--	<sap.ui.layout.form:fields>-->
															<!--		<m:Input width="100%" id="ledger"/>-->
															<!--	</sap.ui.layout.form:fields>-->
															<!--</sap.ui.layout.form:FormElement>-->
															<sap.ui.layout.form:FormElement label="{i18n>profitctr}" id="element3">
																<sap.ui.layout.form:fields>
																	<m:Input width="100%" id="profit"/>
																</sap.ui.layout.form:fields>
															</sap.ui.layout.form:FormElement>
															<sap.ui.layout.form:FormElement label="{i18n>segment}" id="element4">
																<sap.ui.layout.form:fields>
																	<m:Input width="100%" id="segment"/>
																</sap.ui.layout.form:fields>
															</sap.ui.layout.form:FormElement>
															<sap.ui.layout.form:FormElement label="{i18n>barea}" id="element2">
																<sap.ui.layout.form:fields>
																	<m:Input width="100%" id="busarea"/>
																</sap.ui.layout.form:fields>
															</sap.ui.layout.form:FormElement>
															<sap.ui.layout.form:FormElement label="{i18n>trade}" id="element5">
																<sap.ui.layout.form:fields>
																	<m:Input width="100%" id="trade"/>
																</sap.ui.layout.form:fields>
															</sap.ui.layout.form:FormElement>
															<sap.ui.layout.form:FormElement label="{i18n>ttype}" id="element6">
																<sap.ui.layout.form:fields>
																	<m:Input width="100%" id="ttype"/>
																</sap.ui.layout.form:fields>
															</sap.ui.layout.form:FormElement>
														</sap.ui.layout.form:formElements>
													</sap.ui.layout.form:FormContainer>
												</sap.ui.layout.form:formContainers>
												<sap.ui.layout.form:layout>
													<sap.ui.layout.form:ResponsiveGridLayout id="layout1"/>
												</sap.ui.layout.form:layout>
											</sap.ui.layout.form:Form>
										</m:content>
									</m:Panel>
								</headerContent>
								<sections>
									<ObjectPageSection id="loccur" title="{i18n>loccur}">
										<subSections>
											<ObjectPageSubSection id="locCurrSS1">
												<blocks>
													<loccur:localCurrency id="localCurrency"/>													
												</blocks>
											</ObjectPageSubSection>
										</subSections>
									</ObjectPageSection>
									<ObjectPageSection id="doccur" title="{i18n>doccur}">
										<subSections>
											<ObjectPageSubSection id="docCurrSS1">
												<blocks>
													<doccur:documentCurrency id="documentCurrency"/>														
												</blocks>
											</ObjectPageSubSection>
										</subSections>
									</ObjectPageSection>										
								</sections>
							</ObjectPageLayout>
						</m:content>
					</m:Page>
				</m:pages>
			</m:NavContainer>
		</m:content>
		<m:footer>
			<m:Toolbar>
				<m:ToolbarSpacer/>
				<m:Button id="nextButtonId" type="Emphasized" text="{i18n>next}" press="onPressNext"/>
			</m:Toolbar>
		</m:footer>
	</m:Page>
</mvc:View>