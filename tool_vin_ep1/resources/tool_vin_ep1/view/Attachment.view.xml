<mvc:View xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="tool_vin_ep1.controller.attachment">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<Toolbar class="sapUiMediumMargin">
						<BusyDialog id="BusyDialog" visible="false" title="Loading Data" text="... loading the data from the server"/>
						<InputListItem class="sapUiResponsiveContentPadding">
							<Select items="{/rows}" id="dropdown">
								<core:Item key="{columnTable}" text="{columnText}"/>
							</Select>
						</InputListItem>
						<Input placeholder="ID" type="Text" required="true" submit="onEnter"/>
					</Toolbar>
					<Table id="AttachListTable" class="sapUiMediumMargin" items="{/rows}" >
						<columns >
							<Column width="12em">
								<Text text="Business Object ID"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="Description"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="File Name"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
								<Text text="C.Rep"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
								<Text text="Type"/>
							</Column>
							<Column hAlign="End">
								<Text text="Create Date"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="Download"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{BUSINESS_OBJECT_ID}"/>
									<Text text="{DESCRIPTION}"/>
									<Text text="{FILENAME}"/>
									<Text text="{CONTENT_REP}"/>
									<Text text="{FILETYPE}"/>
									<Text text="{CREATE_DATE}"/>
									<Button icon="sap-icon://pdf-attachment" text="Preview" press="onClick"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>