<mvc:View xmlns:m="sap.m" xmlns="sap.uxap" xmlns:mvc="sap.ui.core.mvc" xmlns:table="sap.ui.table" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:v="sap.ui.comp.variants" xmlns:layout="sap.ui.layout" 
	controllerName="tool_sp_demo.controller.FD10N" height="100%">
	<m:Page showNavButton="true" title="{i18n>fd10n}" navButtonPress="onNavButtonPressMain">
		<!-- use this to make the table occupy the available screen height -->
		<m:content>
			<m:NavContainer id="pageContainer" initialPage="page1">
				<m:pages>
					<m:Page id="page1" title="{i18n>title}">
						<m:content>
							<l:VerticalLayout width="100%">
								<v:VariantManagement defaultVariantKey="*standard*" save="onSaveVariant" select="onChange" manage="onManage"
									variantItems="{variants>/}" class="sapUiSmallMargin">
									<v:variantItems>
										<v:VariantItem key="{variants>}" text="{variants>}"></v:VariantItem>
									</v:variantItems>
								</v:VariantManagement>
								<l:Grid containerQuery="true" defaultSpan="XL6 L6" width="100%" class="sapUiSmallMargin" vSpacing="0">
									<m:Label text="{i18n>client}" textAlign="Right" labelFor="client"/>
									<m:ComboBox selectedKey="800" required="true" id="client" placeholder="{i18n>client}" items="{ path: '/t000'}" selectionChange="resetFields">
										<core:Item key="{MANDT}" text="{MANDT}"/>
									</m:ComboBox>
									<m:Label text="{i18n>companycode}" textAlign="Right" labelFor="companycode"/>
									<m:MultiInput value="" placeholder="{i18n>company}" valueHelpOnly="true" showValueHelp="true" valueHelpRequest="showCompanyCode"
										required="true" id="companycode"/>
									<m:Label text="{i18n>customer}" textAlign="Right" labelFor="customer"/>
									<m:MultiInput value="" placeholder="{i18n>customer}" valueHelpOnly="true" showValueHelp="true" valueHelpRequest="showCustomer"
										required="true" id="customer"/>
									<m:Label text="{i18n>year}" textAlign="Right" labelFor="year"/>
									<m:Input value="" placeholder="{i18n>year}" id="year" required="true"/>
								</l:Grid>
							</l:VerticalLayout>
						</m:content>
					</m:Page>
					<m:Page id="page2" showNavButton="true" navButtonPress="onNavButtonPress">
					<m:content>
							<ObjectPageLayout id="ObjectPageLayout" alwaysShowContentHeader="true" useIconTabBar="true">
								<headerTitle>
									<ObjectPageHeader binding="{company>/company/0}" id="header" objectTitle="{company>columnCustomer}"></ObjectPageHeader>
								</headerTitle>
								<headerContent >
									<layout:VerticalLayout binding="{company>/company/0}">
										<m:ObjectStatus title="{i18n>client}" text="{company>columnClient}"/>
										<m:ObjectStatus title="{i18n>company}" text="{company>columnCCode} {company>columnName}"/>
										<m:ObjectStatus title="{i18n>customer}" text="{company>columnCustomer}"/>
										<m:ObjectStatus title="{i18n>year}" text="{company>columnYear}"/>
										<m:ObjectStatus title="{i18n>cur}" text="{company>columnCurrency}"/>
									</layout:VerticalLayout>
									
								</headerContent>
								<sections>
									<ObjectPageSection id="balances" title="{i18n>balances}">
										<subSections>
											<ObjectPageSubSection id="balances1">
												<blocks>
														<m:Table id="tableId" inset="false" items="{data>/rows}">
									<m:columns>
										<m:Column width="12em">
											<m:Text text="{i18n>period}"/>
										</m:Column>
										<m:Column hAlign="Right">
											<m:Text text="{i18n>debit}"/>
										</m:Column>
										<m:Column hAlign="Right">
											<m:Text text="{i18n>credit}"/>
										</m:Column>
										<m:Column hAlign="Right">
											<m:Text text="{i18n>balance}"/>
										</m:Column>
										<m:Column hAlign="Right">
											<m:Text text="{i18n>cumbal}"/>
										</m:Column>
										<m:Column hAlign="Right">
											<m:Text text="{i18n>sales}"/>
										</m:Column>
									</m:columns>
									<m:items>
										<m:ColumnListItem>
											<m:cells>
												<m:ObjectIdentifier title="{data>columnPeriod}"/>
												<m:ObjectNumber
													number="{ path: 'data>columnDebit', type: 'sap.ui.model.type.Float', textAlign: 'Right', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2} }"
													state="{= ${data>columnDebit} >= 0 ? 'None' : 'Error' }"/>
												<m:ObjectNumber
													number="{ path: 'data>columnCredit', type: 'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }"
													state="{= ${data>columnCredit} >= 0 ? 'None' : 'Error' }"/>
												<m:ObjectNumber
													number="{ path: 'data>columnBalance', type: 'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }"
													state="{= ${data>columnBalance} >= 0 ? 'None' : 'Error' }"/>
												<m:ObjectNumber
													number="{ path: 'data>columnCalc', type: 'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }"
													state="{= ${data>columnCalc} >= 0 ? 'None' : 'Error' }"/>
												<m:ObjectNumber
													number="{ path: 'data>columnSales', type: 'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }"
													state="{= ${data>columnSales} >= 0 ? 'None' : 'Error' }"/>
											</m:cells>
										</m:ColumnListItem>
									</m:items>
								</m:Table>												
												</blocks>
											</ObjectPageSubSection>
										</subSections>
									</ObjectPageSection>
									<ObjectPageSection id="splledger" title="{i18n>specialledger}">
										<subSections>
											<ObjectPageSubSection id="splledger1">
												<blocks>
															<m:Table id="tableIdSL" inset="false" items="{dataSL>/rows}">
									<m:columns>
										<m:Column width="12em">
											<m:Text text="{i18n>transaction}"/>
										</m:Column>
											<m:Column hAlign="Right">
											<m:Text text="{i18n>bcf}"/>
										</m:Column>
									
										<m:Column hAlign="Right">
											<m:Text text="{i18n>debit}"/>
										</m:Column>
										<m:Column hAlign="Right">
											<m:Text text="{i18n>credit}"/>
										</m:Column>
											<m:Column hAlign="Right">
											<m:Text text="{i18n>balance}"/>
										</m:Column>
										
										
									</m:columns>
									<m:items>
										<m:ColumnListItem>
											<m:cells>
												<m:ObjectIdentifier title="{dataSL>columnTransaction}"/>
												<m:ObjectNumber
													number="{ path: 'dataSL>columnBalancecarry', type: 'sap.ui.model.type.Float', textAlign: 'Right', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }"
													state="{= ${dataSL>columnBalancecarry} >= 0 ? 'None' : 'Error' }"/>
												<m:ObjectNumber
													number="{ path: 'dataSL>columnDebit', type: 'sap.ui.model.type.Float', textAlign: 'Right', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }"
													state="{= ${dataSL>columnDebit} >= 0 ? 'None' : 'Error' }"/>
												<m:ObjectNumber
													number="{ path: 'dataSL>columnCredit', type: 'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }"
													state="{= ${dataSL>columnCredit} >= 0 ? 'None' : 'Error' }"/>
												<m:ObjectNumber
													number="{ path: 'dataSL>columnBalance', type: 'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }"
													state="{= ${dataSL>columnBalance} >= 0 ? 'None' : 'Error' }"/>
												
											</m:cells>
										</m:ColumnListItem>
									</m:items>
								</m:Table>	
												</blocks>
											</ObjectPageSubSection>
										</subSections>
									</ObjectPageSection>										
								</sections>
							</ObjectPageLayout>
						</m:content>
					</m:Page>
				</m:pages>
			</m:NavContainer>
		</m:content>
		<m:footer>
			<m:Toolbar>
				<m:ToolbarSpacer/>
				<m:Button id="nextButtonId" type="Emphasized" text="{i18n>next}" press="onPressNext"/>
			</m:Toolbar>
		</m:footer>
	</m:Page>
</mvc:View>