<mvc:View
	xmlns:m="sap.m"
	xmlns="sap.uxap"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:table="sap.ui.table" 	
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="tool_sp_demo.controller.FBL3NLC"
	height="100%">
	<m:Page showNavButton="true" title="G/L ACCOUNT LINE ITEM(LOCAL CURRENCY) FBL3N" navButtonPress="onNavButtonPressMain">
		<!-- use this to make the table occupy the available screen height -->
		<m:content>
		  <m:NavContainer id="pageContainer" initialPage="page1">	
		    <m:pages>
		     <m:Page id="page1">
			  <m:content>		
			  <m:Panel headerText="G/L ACCOUNT LINE ITEM(LOCAL CURRENCY)" class="sapUiResponsiveMargin" width="auto">
			    <m:content>

			 	<m:List headerText="{i18n>selopt}">
			 	  	<m:InputListItem label="Client">
						<m:Input id="mandt" placeholder="Client" type="Text" Value="021">
				        </m:Input>								
					</m:InputListItem>
			 	  	<m:InputListItem label="Company Code">
						<m:Input id="bukrs" placeholder="Company Code" type="Text" Value="0010">
				        </m:Input>								
					</m:InputListItem>
			 	  	<m:InputListItem label="G/L Account No">
						<m:Input id="account_von" placeholder="G/L Account No" type="Text">
				        </m:Input>								
					</m:InputListItem>					
			 	  	<m:InputListItem label="Chart of Accounts">
						<m:Input id="p_ktopl" placeholder="Chart of Accounts" type="Text">
				        </m:Input>								
					</m:InputListItem>
			      </m:List>	
				  <m:VBox class="sapUiSmallMargin">		
				    <m:Label text="Line Item Selections"/>
					<m:RadioButton id="R1" groupName="GroupA" text="Open Items" />
					<m:RadioButton id="R2" groupName="GroupA" text="Cleared Items" />
					<m:RadioButton id="R3" groupName="GroupA" text="All Items" selected="true"/>		
				   </m:VBox>	
					<m:Label text="Open Items: Open at key date" labelFor="stichtag"/>
					<m:DatePicker
						id="stichtag"
						placeholder="Enter Date ..."
						value="20170712"
						change="handleChange"
						valueFormat="yyyyMMdd"
						class="sapUiSmallMarginBottom"/>	
					<m:Label text="Sel. cleared Items: Open at key date:" labelFor="apstichtag"/>
					<m:DatePicker
						id="apstichtag"
						placeholder="Enter Date ..."
						value="20161231"
						change="handleChange"
						valueFormat="yyyyMMdd"
						class="sapUiSmallMarginBottom"/>
					<m:Label text="Sel. cleared Items: Clearing Date from:" labelFor="apbudatvon"/>
					<m:DatePicker
						id="apbudatvon"
						placeholder="Enter Date ..."
						value="00010101"
						change="handleChange"
						valueFormat="yyyyMMdd"
						class="sapUiSmallMarginBottom"/>
					<m:Label text="Sel. cleared Items: Clearing Date to:" labelFor="apbudatbis"/>
					<m:DatePicker
						id="apbudatbis"
						placeholder="Enter Date ..."
						value="99991231"
						change="handleChange"
						valueFormat="yyyyMMdd"
						class="sapUiSmallMarginBottom"/>
					<m:Label text="Sel. all Items: Posting Date from:" labelFor="alpbudatvon"/>
					<m:DatePicker
						id="alpbudatvon"
						placeholder="Enter Date ..."
						value="00010101"
						change="handleChange"
						valueFormat="yyyyMMdd"
						class="sapUiSmallMarginBottom"/>
					<m:Label text="Sel. all Items: Posting Date to:" labelFor="alpbudatbis"/>
					<m:DatePicker
						id="alpbudatbis"
						placeholder="Enter Date ..."
						value="99991231"
						change="handleChange"
						valueFormat="yyyyMMdd"
						class="sapUiSmallMarginBottom"/>						
			    </m:content>
			  </m:Panel>
			  </m:content>			  
			 </m:Page>
			<m:Page id="page2" showNavButton="true" navButtonPress="onNavButtonPress">
			</m:Page>	
			</m:pages>
         </m:NavContainer>				
		</m:content>
		<m:footer>
			<m:Toolbar>
				<m:ToolbarSpacer/>
				<m:Button id="nextButtonId" type="Emphasized" text="{i18n>next}" press="onPressNext"/>
			</m:Toolbar>
		</m:footer>	
	</m:Page>		
</mvc:View>